<section class="group center">
  <%= image_tag "profile.jpg" %>

  <h2><%= @project.title %></h2>

  <p><%= @project.description %></p>


  <nav>
    <ul> 
      <% if @project.demo %>
      <li>Live at
        <a href="<%= @project.live %>">
          <%= @project.live[11..-1] %>
        </a>
        <small>
          username "demo"<br>password "12341234"
        </small>
      </li>
      <% else %>
      <li style="margin-bottom:20px;">View at
